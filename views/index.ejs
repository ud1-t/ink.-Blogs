<div class="author">
    <h1 class="author__heading">Hi, I am ud1t.</h1>
    <p class="authour__body">Web Designer & Developer.</p>
</div>

<img src="/img/hero-image.jpg" alt="a nerd emoji" class="hero-image" width = "820" height="528">

<section class="articles">
    <h2 class="article__heading">Latest Post</h2>

    <ul class="article-ul">
        <% data.forEach(post => { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <span><%= post.title %></span>
                    <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
                </a>
            </li>
        <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
    
</section>